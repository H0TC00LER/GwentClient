<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="150"
             x:Class="GwentClient.Views.CardView">

	<Panel Width="100" Height="150" Background="AliceBlue">
		<Image Stretch="Fill" Source="{Binding CardImage}"></Image>
		<Panel Margin="-10 -15 0 0" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left">
			<Image Source="/Assets/PowerFrame.png"/>
			<TextBlock Text="{Binding CurrentPower}"
					   FontSize="17"
					   Foreground="White"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"/>
		</Panel>
		<Panel Margin="-15 20 0 0" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left">
			<Image Source="/Assets/PowerFrame.png"/>
			<Image Source="{Binding RoleImage}" Width="20"/>
		</Panel>
		
	</Panel>
	
</UserControl>
