<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="GwentClient.Views.LoginView">
	<Panel>
		<Image Stretch="Fill" Source="/Assets/Background.jpg"/>
		<TextBlock Margin="200" HorizontalAlignment="Center" Foreground="White" FontSize="180">ГВИНТ</TextBlock>
		<StackPanel Width="250" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Padding="25 0 0 0" Foreground="AliceBlue" FontSize="30">Введите логин</TextBlock>
			<TextBox></TextBox>
			<Button Foreground="White"
					HorizontalContentAlignment="Center"
					BorderBrush="Black"
					BorderThickness="2"
					Margin="5"
					Width="150"
					Height="30"
					HorizontalAlignment="Center"
					FontSize="16"
					Content="Войти"/>
		</StackPanel>
	</Panel>
</UserControl>
